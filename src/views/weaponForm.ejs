<%- include('./header.ejs') %>
    <h2>
      <%= title %>
    </h2>
    <form action="" method="post">
      <div>
        <label for="weaponName">
          Weapon Name:
        </label>
        <input 
        type="text"
        id="visionName"
        name="name"
        required="true"
        value=<%= typeof weapon === "undefined" ? "" : weapon.name %>
        >
        <% if (typeof errors !== "undefined") { %>
          <% errors.forEach(error => { %>
            <% if (error.location === "name") { %>
              <span>
                <%= error.msg %>
              </span>
            <% } %>
          <% }) %>
        <% } %>
      </div>
      <button type="submit">Submit</button>
    </form>
<%- include('./footer.ejs') %>