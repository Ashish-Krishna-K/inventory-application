<%- include('./header.ejs') %>
  <main class="delete-weapon-page">
    <div>
      <h2>
        <%= weapon.name %>
      </h2>
    </div>
    <% if (typeof characters !== "undefined" && characters.length > 0) { %>
      <div>
        <p>Please ensure to change the vision type of below characters before deleting this vision. Alternatively you can delete the characters</p>
        <ul>
          <ul>
            <% characters.forEach(character => { %>
              <li class=<%= character.rarity === "5" ? "five-star" : "four-star" %>>
                <a href=<%= character.url %>>
                  <img
                    src=<%= character.imgPath %>
                    alt=<%= `${character.name} avatar` %>
                  >
                  <h4>
                    <%= character.name %>
                  </h4>
                </a>
              </li>
            <% }) %>
          </ul>
        </ul>
      </div>
    <% } else { %>
      <div>
        <p>
          <strong>
            Do you really want to delete this Weapon?
          </strong>
        </p>
        <form action="" method="post" class="delete-form">
          <input type="hidden" name="id" value=<%= weapon.id %>>
          <div class="controls">
            <button type="submit">Yes</button>
            <button type="button" onclick="history.back()">No</button>
          </div>
        </form>
      </div>
    <% } %>
  </main>
<%- include('./footer.ejs') %>
