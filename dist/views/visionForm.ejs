<%- include('./header.ejs') %>
    <main class="add-vision-page">
      <h2>
        <%= title %>
      </h2>
      <div class="form-container">
        <form action="" method="post" class="add-vision">
          <div class="name-input">
            <label for="visionName">
              Vision Name:
            </label>
            <% if (typeof errors !== "undefined") { %>
              <!-- errors exist display error -->
              <% errors.forEach(error => { %>
                <% if (error.path === "name") { %>
                  <!-- error is in the name field display the error -->
                  <span class="error">
                    <%= error.msg %>
                  </span>
                <% } %>
              <% }) %>
            <% } %>
            <!-- if vision object exists, display vision name as value -->
            <input
            type="text"
            id="visionName"
            name="name"
            required="true"
            value="<%= typeof vision === "undefined" ? "" : vision.name %>"
            >
        
          </div>
          <div class="desc-input">
            <label for="description">
              Description:
            </label>
            <% if (typeof errors !== "undefined") { %>
              <% errors.forEach(error => { %>
                <% if (error.path === "description") { %>
                  <!-- error is in description field, display error -->
                  <span class="error">
                    <%= error.msg %>
                  </span>
                <% } %>
              <% }) %>
            <% } %>
            <!-- if vision object exists, display vision description in the textarea field -->
            <textarea
              name="description"
              id="description"
              cols="30"
              rows="10"
              required="true"
            ><%= typeof character === "undefined" ? "" : vision.description %></textarea>
        
          </div>
          <div class="form-btns">
            <button type="submit">Submit</button>
            <button type="button" onclick="history.back()">Cancel</button>
          </div>
        </form>
      </div>
    </main>
<%- include('./footer.ejs') %>