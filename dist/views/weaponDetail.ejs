<%- include('./header.ejs') %>
  <main class="weapon-detail-page">
    <h2>
      <%= title %>
    </h2>
    <div class="controls">
      <p>
        <a href=<%= `/weapons/${weapon.id}/edit` %>>
          Edit Weapon Details
        </a>
      </p>
      <p>
        <a href=<%= `/weapons/${weapon.id}/delete` %>>
          Delete this Weapon
        </a>
      </p>
    </div>
    <div class="list-container">
      <% if (characters.length > 0) { %>
        <h3>
          All characters bearing this weapon.
        </h3>
        <ul class="character-list">
          <% characters.forEach(character => { %>
            <li>
              <a href=<%= character.url %> class="character">
                <!-- display gold background if character rarity is 5 stars and purple if it's 4 stars -->
                <div class=<%= character.rarity === "5" ? "five-star" : "four-star" %>>
                  <img
                    src=<%= `/images/${character.imgPath}` %>
                    alt="<%= `${character.name} avatar` %>"
                  >
                </div>
                <h4>
                  <%= character.name %>
                </h4>
              </a>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
       <p>
        There is no characters bearing this weapon.
       </p>
       <a href="/characters/create">
        Add a character.
       </a>
      <% } %>
    </div>
  </main>
<%- include('./footer.ejs') %>