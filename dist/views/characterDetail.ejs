<%- include('./header.ejs') %>
<main class="character-details-page">
  <div>
    <h2>
      <span>
        <%= character.name %>
      </span>
      <span>
        <%= "⭐".repeat(character._rarity) %>
      </span>
    </h2>
    <img
      src=<%= `/images/${character.imgPath}` %>
      alt=<%= `${character.name} avatar` %>
    >
    <p>
      <%= character.description %>
    </p>
    <p>
      <strong>
        Vision:
      </strong>
      <a href=<%= character.vision.url %>>
        <%= character.vision.name %>
      </a>
    </p>
    <p>
      <strong>
        Weapon:
      </strong>
      <a href=<%= character.weapon.url %>>
        <%= character.weapon.name %>
      </a>
    </p>
  </div>
  <div class="controls">
    <p>
      <a href=<%= `/characters/${character.id}/edit` %>>
        Edit Character Details
      </a>
    </p>
    <p>
      <a href=<%= `/characters/${character.id}/delete` %>>
        Delete Character
      </a>
    </p>
  </div>
</main>
<%- include('./footer.ejs') %>
