<%- include('./header.ejs') %>
  <main class="all-characters-page">
    <h2>
      <%= title %>
    </h2>
    <div class="list-container">
      <% if (characters.length > 0) { %>
        <ul class="character-list">
          <% characters.sort((a, b) => a.name.toUpperCase() < b.name.toUpperCase() ? -1 : a.name.toUpperCase() > b.name.toUpperCase() ? 1 : 0).forEach(character => { %>
            <li>
              <a href=<%= character.url %> class="character">
                <div class=<%= character.rarity === "5" ? "five-star" : "four-star" %>>
                  <img
                    src=<%= `/images/${character.imgPath}` %>
                    alt=<%= character.name %>
                  >
                </div>
                <h3>
                  <%= character.name %>
                </h3>
              </a>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p>
          There are no Characters in the inventory! 
        </p>
        <a href="/characters/create">
          Add a new Character.
         </a>
      <% } %>
    </div>
  </main>
<%- include('./footer.ejs') %>
