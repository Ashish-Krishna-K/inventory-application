<%- include('./header.ejs') %>
    <main class="add-weapon-page">
      <h2>
        <%= title %>
      </h2>
      <div class="form-container">
        <form action="" method="post">
          <div>
            <label for="weaponName">
              Weapon Name:
            </label>
            <% if (typeof errors !== "undefined") { %>
              <% errors.forEach(error => { %>
                <% if (error.path === "name") { %>
                  <span class="error">
                    <%= error.msg %>
                  </span>
                <% } %>
              <% }) %>
            <% } %>
            <input
            type="text"
            id="visionName"
            name="name"
            required="true"
            value="<%= typeof weapon !== "undefined" ? weapon.name : "" %>"
            >
        
          </div>
          <div class="form-btns">
            <button type="submit">Submit</button>
            <button type="button" onclick="history.back()">Cancel</button>
          </div>
        </form>
      </div>
    </main>
<%- include('./footer.ejs') %>