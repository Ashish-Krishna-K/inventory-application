<%- include('./header.ejs') %>
    <main class="add-weapon-page">
      <h2>
        <%= title %>
      </h2>
      <div class="form-container">
        <form action="" method="post">
          <div>
            <label for="weaponName">
              Weapon Name:
            </label>
            <% if (typeof errors !== "undefined") { %>
              <!-- errors exist display error -->
              <% errors.forEach(error => { %>
                <% if (error.path === "name") { %>
                  <!-- error is on the name input -->
                  <span class="error">
                    <%= error.msg %>
                  </span>
                <% } %>
              <% }) %>
            <% } %>
            <!-- 
              if a weapon object is provided it's not undefined, display 
              the name as the input value. 
            -->
            <input
            type="text"
            id="visionName"
            name="name"
            required="true"
            value="<%= typeof weapon !== "undefined" ? weapon.name : "" %>"
            >
          </div>
          <div class="form-btns">
            <button type="submit">Submit</button>
            <button type="button" onclick="history.back()">Cancel</button>
          </div>
        </form>
      </div>
    </main>
<%- include('./footer.ejs') %>